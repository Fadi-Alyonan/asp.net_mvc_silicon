@model SignInViewModel
@{
    ViewData["title"] = Model.Title;
}
<section id="signin">
    <div class="container">
        
        <form method="post" asp-controller="Auth" asp-action="SignIn" novalidate>
            @if (!string.IsNullOrEmpty(ViewData["ErrorMassage"]?.ToString()))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["ErrorMassage"]
                </div>
            }
            <h1>Wolcome Back</h1>
            <p>Alredy have an account? <a asp-controller="Auth" asp-action="SignUp">Sign up here</a></p>
            <div class="content">
                
                <div id="form-email" class="input-group">
                    <label asp-for="Form.Email"></label>
                    <span asp-validation-for="Form.Email"></span>
                    <input asp-for="Form.Email" />
                </div>
                <div id="form-password" class="input-group">
                    <label asp-for="Form.Password"></label>
                    <span asp-validation-for="Form.Password"></span>
                    <input asp-for="Form.Password" />
                </div>
                <div id="form-remember">
                    <div class="checkbox-group">
                        <input asp-for="Form.RememberMe" />
                        <label asp-for="Form.RememberMe"></label>
                    </div>
                </div>
                <button id="form-button" class="btn-theme-s" type="submit">@Model.Title</button>
                <a id="form-forgot" asp-controller="" asp-action="">Forgot your password?</a>
            </div>
        </form>
    </div>
</section>